<%= simple_form_for(@equipment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <% if @equipment.category.present? %>
      <h5>Category: <span id='equipment_category'><%= "#{@equipment.category.name}" %></span></h5>
    <% end %>
    <%= f.association :brand, collection: @brands %>
    <%= f.association :model, collection: @models %>
    <%= f.input :asset_tag %>
    <%= f.input :hostname %>
    <%= f.input :serial_number %>
    <%= f.input :phone_number %>
    <%= f.input :sim_number, label: 'SIM ID' %>
    <%= f.input :imei, label: 'IMEI' %>
    <%= f.input :device_number, label: 'Device ID' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
