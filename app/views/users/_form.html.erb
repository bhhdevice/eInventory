
<%= simple_form_for(user, as: :user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true %>
    <%= f.input :last_name, required: true %>
    <%= f.association :job_title, required: true %>
    <%= f.input :reports_to_id, collection: @managers, include_blank: true %>
    <%= f.input :employee_number, hint: ('EN######'), input_html: { maxlength: 7 }, required: true %>
    <%= f.association :department, required: true %>
    <%= f.association :location, required: true %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state, input_html: { maxlength: 2 }%>
    <%= f.input :zip_code, input_html: { maxlength: 5 }%>
    <%= f.input :phone_number %>
    <% if user_signed_in? && current_user.admin? %>
      <%= f.input :email, required: true %>
      <%= f.input :active, as: :select, required: true %>
      <%= f.input :admin, as: :select, required: true %>
      <%= f.input :manager, as: :select, required: true %>
      <%= f.input :password, autocomplete: "off" %>
      <%= f.input :password_confirmation, autocomplete: "off" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
